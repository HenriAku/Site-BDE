{% extends '_template/base.html.twig' %}

{% block title %}<title> Contact - BDE Informatique</title>{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/asset/css/contact.css">
{% endblock %}

{% block body %}
<div class="contact-container">
    <h1>Contactez-nous</h1>

    {% if success %}
        <div class="alert alert-success text-center" role="alert">
            {{ success }}
        </div>
    {% endif %}

    {% if errors %}
        <div class="alert alert-danger text-center" role="alert">
            <ul class="mb-0">
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form method="post" action="contact.php">
        <div class="div-form">
            <label for="email">Email :</label>
            <input type="email" name="email" id="email" value="{{ data.email ?? '' }}" required>
        </div>

        <div class="div-form">
            <label for="objet">Objet :</label>
            <input type="text" name="objet" id="objet" value="{{ data.objet ?? '' }}" required>
        </div>
        
        <div class="div-form">
            <label for="msg">Message :</label>
            <textarea name="msg" id="msg" required>{{ data.msg ?? '' }}</textarea>
        </div>
        
        <div class="div-form">
            <input type="submit" name="btnform" id="btnform" value="Envoyer">
        </div>
    </form>
</div>
{% endblock %}