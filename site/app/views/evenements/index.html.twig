{% extends "base.html.twig" %}

{% block title %}Liste des événements{% endblock %}

{% block body %}
<h1 class="title">Événements à venir</h1>

<div class="event-container">
    {% for event in evenements %}
    <div class="event-card">
        <h2 class="event-title">{{ event.getNom() }}</h2>

        <div class="event-image">
            <img src="/assets/images/events/{{ event.getId() }}.jpg" alt="Image de {{ event.getNom() }}">
        </div>

        <p class="event-description">{{ event.getDescription() }}</p>

        <p class="event-date">
            {{ event.getDateDebut() }} - {{ event.getAdresse() }}
        </p>

        <p class="event-note">
            *Note : {% if event.getNote() is defined %}{{ event.getNote() }}/5{% else %}Non noté{% endif %}
        </p>

        <a href="/evenement/show/{{ event.getId() }}" class="btn">Voir plus</a>
    </div>
    {% endfor %}
</div>

{% endblock %}
