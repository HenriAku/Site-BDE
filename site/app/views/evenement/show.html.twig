{% extends "_template/base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="../asset/css/event.css">
{% endblock %}

{% block body %}
<article class="event-container">
    <h1>{{ event.nom }}</h1>

    {% if event.getImage() %}
    <div class="event-main-image">
        <img src="../asset/images/evenements/{{ event.getImage() }}" alt="{{ event.getNom() }}">
    </div>
    {% endif %}
    
    <div class="event-header">
        <div class="event-meta">
            <time>{{ event.dateDebut|date('d/m/Y H:i') }}</time>
            <address>{{ event.adresse }}</address>
            <div class="price">{{ event.prix }} €</div>
        </div>
    </div>

    <div class="event-body">
        <p>{{ event.description }}</p>

        <div class="rating">
            {% if event.note_moyenne > 0 %}
                <div class="stars">
                    {% for i in 1..5 %}
                        {% if i <= event.note_moyenne|round %}
                            ★
                        {% else %}
                            ☆
                        {% endif %}
                    {% endfor %}
                </div>
                <span>{{ event.note_moyenne|number_format(1) }}/5 ({{ comments|length }} avis)</span>
            {% else %}
                <p>Pas encore noté</p>
            {% endif %}
        </div>

    </div>

    <div class="comments-section">
    <h3>Commentaires ({{ comments|length }})</h3>
    
    {% if event.checkAuth() %}
        <div class="add-comment">
            <h4>Ajouter un commentaire</h4>
            <form action="/event/{{ event.id }}/comment" method="post">
                <div class="form-group">
                    <label for="note">Note (entre 1 et 5)</label>
                    <select name="note" id="note" class="form-control" required>
                        <option value="1">1 ★</option>
                        <option value="2">2 ★★</option>
                        <option value="3">3 ★★★</option>
                        <option value="4">4 ★★★★</option>
                        <option value="5" selected>5 ★★★★★</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="avis">Votre commentaire</label>
                    <textarea name="avis" id="avis" class="form-control" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Envoyer</button>
            </form>
        </div>
    {% else %}
        <div class="alert alert-info">
            <a href="/login.php">Connectez-vous</a> pour laisser un commentaire
        </div>
    {% endif %}
    
        {% if comments|length > 0 %}
            {% for comment in comments %}
                <div class="comment">
                    <div class="comment-header">
                        <span class="comment-user">{{ comment.prenom }} {{ comment.nom }}</span>
                        <span class="comment-rating">
                            Note: {{ comment.note }}/5
                            {% for i in 1..5 %}
                                {% if i <= comment.note %}
                                    ★
                                {% else %}
                                    ☆
                                {% endif %}
                            {% endfor %}
                        </span>
                    </div>
                    <p class="comment-text">{{ comment.avis }}</p>
                </div>
            {% endfor %}
        {% else %}
            <p class="no-comments">Aucun commentaire pour cet événement</p>
        {% endif %}
    </div>

    <a href="/event.php" class="btn">Retour à la liste</a>
</article>
{% endblock %}