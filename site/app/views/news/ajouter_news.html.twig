{% extends '_template/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="../asset/css/produit.css">
{% endblock %}

{% block body %}
<h1>Panel D'administration des news</h1>

{% if messages.success %}
    <div class="alert alert-success">{{ messages.success }}</div>
{% endif %}
{% if messages.error %}
    <div class="alert alert-danger">{{ messages.error }}</div>
{% endif %}

<div class="Menu-administrateur">
    <a href="create_event.php">Event</a>
    <a href="ajouter_news.php">Actu</a>
    <a href="produit.php">Boutique</a>
    <a href="">Vente</a>
    <a href="users.php">Gestion</a>
    <a href="">Adhésion</a>
    <a href="participation.php">Participation</a>
</div>


<form method="post" enctype="multipart/form-data" action="/ajouter_news.php">
    <input type="hidden" name="id" id="newsId" value="">

    <div class="Formulaire">
        <label for="LstNews">Liste des news</label>
        <div class="LstNews">    
            <select id="LstNews" name="news_select" onchange="loadEventData(this)">
                <option value="">-- Sélectionner une news --</option>
                {% for new in news %}
                    <option value="{{ new.getId() }}" 
                            data-titre="{{ new.getTitre() }}"
                            data-date="{{ new.getDate()|date('Y-m-d\\TH:i') }}"
                            data-contenu="{{ new.getContenu() }}"
                        {{ new.getTitre() }} ({{ new.getDate()|date('d/m/Y') }})
                    </option>
                {% endfor %}    
            </select>
        </div>

        <div class="form-group">
            <label for="titre">Titre de la news :</label>
            <input type="text" id="titre" name="titre" required>
        </div>

        <div class="form-group">
            <label for="adresse">Contenu :</label>
            <input type="text" id="contenu" name="contenu" required>
        </div>

        <div class="actions">
            <button type="submit" name="action" value="add" class="btn-ajouter">Ajouter</button>
            <button type="submit" name="action" value="update" class="btn-modifier">Modifier</button>
            <button type="submit" name="action" value="delete" class="btn-supprimer">Supprimer</button>
        </div>
    </div>
</form>

{% block javascripts %}
<script>
function loadEventData(select) {
    const option = select.selectedOptions[0];
    if (!option.value) return;
    
    document.getElementById('newsId').value = option.value;
    document.getElementById('titre').value = option.dataset.titre;
    document.getElementById('date').value = option.dataset.date;
    document.getElementById('contenu').value = option.dataset.contenu;

}
</script>
{% endblock %}

{% endblock %}