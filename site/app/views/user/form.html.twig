{% extends '_template/base.html.twig' %}
{% block stylesheets %}
    {{ parent() }} {# Important pour conserver les styles du parent #}
    <link rel="stylesheet" href="asset/css/user.css">
{% endblock %}

{% block title %}<title>Inscription - BDE Informatique</title>{% endblock %}

{% block body %}

<form method="POST" action="{{ id ? 'user_update.php?id=' ~ id :  'user_create.php'}}" class="container mt-5">
    <h1 class="mb-4">{{ id ? 'Mise a jour':'Création'}} d'un utilisateur</h1>

    <!-- Erreurs -->
    {% if errors %}
        <div class="alert alert-danger text-center" role="alert">
            <ul class="mb-0">
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <!-- Nom d'utilisateur -->
    <div class="itemForm">
    <label for="firstname">Prénom</label>
        <input type="text" name="firstname" id="firstname" class="form-control"
               value="{{ data.firstname }}" required>
    </div>

    <!-- Nom d'utilisateur -->
    <div class="itemForm">
        <label for="lastname">Nom</label>
        <input type="text" name="lastname" id="lastname" class="form-control"
               value="{{ data.lastname }}" required>
    </div>

    <!-- Email -->
    <div class="itemForm">
        <label for="password">Email</label>
        <input type="email" name="email" id="email" class="form-control"
               value="{{ data.email }}" required>
    </div>

    <!-- Mot de passe -->
    <div class="itemForm">
        <label for="password">Mot de passe</label>
        <input type="password" name="password" id="password" class="form-control" required>
    </div>

    <!-- Confirmer Mot de passe -->
    <div class="itemForm">
        <label for="conf_password">Confirmer mot de passe</label>
        <input type="password" name="conf_password" id="conf_password" class="form-control" required>
    </div>

    <!-- Num etudiant -->
    <div class="itemForm">
        <label for="netu">Numéro étudiant</label>
        <input type="text" name="netu" id="netu" class="form-control"
               value="{{ data.netu }}" required>
    </div>

    <!-- Bouton -->
    <div class="btnForm">
        <button type="submit" class="inscription">Inscription</button>
        <a href="/login.php" class="connextion">Se connecter</a>
    </div>

</form>

{% endblock %}
